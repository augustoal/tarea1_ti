  <%for (var i=0; i < informacion.pilotConnection.pilots.length; i++){%>
    <li><a class="people" id="<%=informacion.pilotConnection.pilots[i].id%>" href="/detalle/people,<%=informacion.pilotConnection.pilots[i].id%>"><%=informacion.pilotConnection.pilots[i].name%></a></li>
  <%}%>
</ul>
<p><b>Films:</b></p>
<ul>
  <%for (var i=0; i < informacion.filmConnection.films.length; i++){%>
    <li><a class="films" id="<%=informacion.filmConnection.films[i].episodeID%>" href="/detalle/films,<%=informacion.filmConnection.films[i].episodeID%>"><%=informacion.filmConnection.films[i].title%></a></li>
  <%}%>
</ul>
