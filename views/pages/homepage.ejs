<div class="container">
  <h1>Películas de Star Wars</h1>
  <%if (!peliculas) {%>
    <h3>Lo lamento, parece que hubo un error en la API</h3>
  <%} else {%>
    <%for(var i=0; i<peliculas.length; i++){%>
      <div class = "row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
          <div class="pelicula jumbotron" onclick="window.location='/<%=peliculas[i].url.split("/").slice(-3,-1)%>';">
            <h3><%=peliculas[i].title%></h3>
            <p><%=peliculas[i].episode_id%></p>
            <p><%=peliculas[i].release_date%></p>
            <p><%=peliculas[i].director%></p>
            <p><%=peliculas[i].producer%></p>
            <br>
          </div>
        </div>
        <div class="col-md-3">
        </div>
      </div>
    <%}%>
  <%}%>
</div>
